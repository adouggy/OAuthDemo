<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.adouggy.android.oauth.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/txt_view"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btn_get_hash"
        android:text="get package hash"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/fb_login_button"
        android:textSize="16sp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_login_instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in with Instagram"
        android:layout_below="@+id/btn_get_hash"
        android:textSize="16sp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_login_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in with Twitter"
        android:layout_below="@+id/btn_login_instagram"
        android:textSize="16sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="token_here"/>

</RelativeLayout>
